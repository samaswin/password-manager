<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - SecureVault" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="SecureVault Admin">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#ffffff">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# User authentication and profile meta tags for Vue components %>
    <% if user_signed_in? %>
      <meta name="user-authenticated" content="true">
      <meta name="user-email" content="<%= current_user.email %>">
      <meta name="user-name" content="<%= current_user.email.split('@').first.titleize %>">
      <meta name="user-role" content="<%= current_user.role %>">
      <meta name="user-theme" content="<%= current_user.preferences&.dig('theme') || 'light' %>">
    <% else %>
      <meta name="user-authenticated" content="false">
    <% end %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application' %>

  </head>

  <body data-theme="<%= user_signed_in? && current_user.preferences&.dig('theme') ? current_user.preferences['theme'] : 'light' %>">
    <div id="vue-app">
      <%# Admin Navbar %>
      <nav class="admin-navbar">
        <div class="container">
          <div class="nav-wrapper">
            <a href="<%= admin_root_path %>" class="brand-logo">
              <i class="material-icons">admin_panel_settings</i>
              Admin Panel
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="<%= admin_root_path %>">Dashboard</a></li>
              <li><a href="<%= admin_companies_path %>">Companies</a></li>
              <li><a href="<%= admin_analytics_path %>">Analytics</a></li>
              <li>
                <theme-toggle class="navbar-variant"></theme-toggle>
              </li>
              <% if user_signed_in? %>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

      <%# Flash Messages %>
      <% if notice || alert %>
        <div class="container" style="margin-top: 20px;">
          <% if notice %>
            <div class="card-panel teal lighten-4 teal-text text-darken-4">
              <i class="material-icons left">check_circle</i>
              <%= notice %>
            </div>
          <% end %>
          <% if alert %>
            <div class="card-panel red lighten-4 red-text text-darken-4">
              <i class="material-icons left">error</i>
              <%= alert %>
            </div>
          <% end %>
        </div>
      <% end %>

      <%# Main Content %>
      <main class="admin-main">
        <div class="container">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>

